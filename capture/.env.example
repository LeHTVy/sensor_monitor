# Capture Server Environment Configuration
# Copy this file to .env and fill in your secure values
# NEVER commit the .env file to git!

# ===========================================
# REQUIRED - Must be set before deployment
# ===========================================

# Admin credentials for dashboard login
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here

# API key for frontend-backend communication
# Generate with: openssl rand -hex 32
CAPTURE_API_KEY=your_api_key_here

# JWT secret for token signing
# Generate with: openssl rand -hex 64
JWT_SECRET_KEY=your_jwt_secret_here

# ===========================================
# OPTIONAL - Enhanced features
# ===========================================

# OSINT API Keys (for enrichment)
SHODAN_API_KEY=
ABUSEIPDB_API_KEY=
VIRUSTOTAL_API_KEY=
GEOIP_API_KEY=

# Elasticsearch configuration
ELASTICSEARCH_URL=http://elasticsearch:9200
ES_INDEX_PREFIX=sensor-logs

# Kafka configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
